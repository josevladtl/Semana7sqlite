<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Semana7sqlite.Registro">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="VENTANA DE REGISTRO"/>


            <Entry x:Name="txtNombre" Placeholder="Nombre"/>
                <Entry x:Name="txtUsuario" Placeholder="Usuario"/>
                <Entry x:Name="txtContrasena" Placeholder="Contrasena"/>


                <Button x:Name="btnGuardar" Text="Guardar" Clicked="btnGuardar_Clicked"/>
            <Button x:Name="btnSalir"  Text="Salir" Clicked="btnSalir_Clicked"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>